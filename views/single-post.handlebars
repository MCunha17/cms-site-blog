<!DOCTYPE html>
<html>
<head>
  <title>Single Post</title>
</head>
<body>
  <div class="container">
    <div class="header">
      <div class="title">
        <h1>{{post.title}}</h1>
      </div>
      <div class="details">
        <p>Posted by {{post.user.username}} on {{formatDate post.createdAt}}</p>
      </div>
    </div>
    <div class="content">
      <p>{{post.content}}</p>
    </div>
  </div>

  {{#unless showCommentSubmitted}}
  <div class="container" id="comment-form">
    <div class="header"></div>
    <div class="content">
      <form action="/post/{{post.id}}/comments" method="POST" onsubmit="hideCommentForm(event)">
        <div class="form-group">
          <label for="comment">Comment</label>
          <textarea id="comment" name="comment"></textarea>
        </div>
        <button type="submit" class="primary-btn">Submit</button>
      </form>
    </div>
  </div>
  {{/unless}}

  <div class="container" id="show-comments" style="display: {{#if showcommentubmitted}}block{{else}}none{{/if}}">
    <div class="content">
      {{#if comments}}
        {{#each comments}}
        <div class="comment">
          <p>{{this.comment_text}}</p>
          <p class="comment-details">Comment by {{this.user.username}}</p>
        </div>
        {{/each}}
      {{else}}
        <p>No comments found.</p>
      {{/if}}
    </div>
  </div>

<script>
async function hideCommentForm(event) {
  event.preventDefault();

  const form = event.target;
  const comment = form.elements.comment.value;
  const response = await fetch(form.action, {
    method: 'POST',
    headers: {
      'Content-Type': 'application/json',
    },
    body: JSON.stringify({ comment }),
  });

  if (response.ok) {
    document.getElementById("comment-form").style.display = "none";
    document.getElementById("show-comments").style.display = "block";
  } else {
    alert('Failed to post comment');
  }
}
</script>
</body>
</html>