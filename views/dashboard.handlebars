{{#if posts.length}}
  <ul>
    {{#each posts}}
      <li>
        <a href="dashboard/post/{{id}}">
          <h4>{{title}}</h4>
        </a>
        <p>Posted on: {{createdAt}}</p>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No blog posts found.</p>
{{/if}}

<a href="/dashboard/post/new" class="btn btn-primary">+ New Post</a>