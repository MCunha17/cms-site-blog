<h2>Dashboard</h2>

{{#if posts.length}}
  <h3>My Blog Posts</h3>
  <ul>
    {{#each posts}}
      <li>
        <h4>{{title}}</h4>
        <p>{{content}}</p>
        <form action="/post/{{id}}?_method=DELETE" method="POST">
          <button type="submit" class="btn btn-danger">Delete</button>
        </form>
        <a href="/post/{{id}}/edit" class="btn btn-primary">Edit</a>
      </li>
    {{/each}}
  </ul>
{{else}}
  <p>No blog posts found.</p>
{{/if}}

{{!-- Button to create a new post --}}
<a href="/post" class="btn btn-primary">Create New Post</a>